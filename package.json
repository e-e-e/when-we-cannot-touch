{
  "name": "whenwecannottouch",
  "version": "1.0.0",
  "description": "A website for the mail art project When We Cannot Touch",
  "main": "index.js",
  "author": "Benjamin Forster",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "lint": "eslint src/",
    "build": "yarn lint && yarn build:clean && yarn build:server && yarn build:assets",
    "build:clean": "rimraf build/",
    "build:server": "tsc --build --force tsconfig.json",
    "build:assets": "cp -r src/public/ build/public"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/google-spreadsheet": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "google-spreadsheet": "^3.0.13"
  }
}
